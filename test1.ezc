
target = 7        
attempts = 0

print("Guess the number between 1 and 10!")

while true do
    print("Enter your guess:")
    input             
    guess = input     

    attempts = attempts + 1

    if guess == target then
        print("Congratulations! You guessed it!")
        print("It took you:")
        print(attempts)
        break
    elseif guess < target then
        print("Too low!")
    elseif guess > target then
        print("Too high!")
    end
end
